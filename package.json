{
  "name": "skills-evaluation-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/app",
    "build": "npm run build --workspace=packages/app",
    "start": "npm run start --workspace=packages/app",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "npm run type-check --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "npm run test:watch --workspace=packages/app",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:ci": "npm run test:ci --workspaces --if-present",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "quality:fix": "npm run type-check && npm run lint:fix && npm run format",
    "quality:ci": "npm run type-check && npm run lint && npm run format:check && npm run test:ci",
    "clean": "npm run clean --workspaces --if-present",
    "clean:all": "npm run clean:all --workspaces --if-present && rm -rf node_modules package-lock.json",
    "build:all": "npm run build --workspaces --if-present",
    "env:check": "node -e \"console.log('Environment check:', process.env.NODE_ENV)\"",
    "prepare": "husky install || true",
    "postinstall": "npm run env:check",
    "app:dev": "npm run dev --workspace=packages/app",
    "app:build": "npm run build --workspace=packages/app",
    "app:start": "npm run start --workspace=packages/app",
    "app:test": "npm run test --workspace=packages/app",
    "design-system:build": "npm run build --workspace=packages/design-system",
    "design-system:dev": "npm run dev --workspace=packages/design-system",
    "design-system:storybook": "npm run storybook --workspace=packages/design-system",
    "design-system:build-storybook": "npm run build-storybook --workspace=packages/design-system",
    "design-system:test": "npm run test --workspace=packages/design-system"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "typescript": "^5"
  }
}
